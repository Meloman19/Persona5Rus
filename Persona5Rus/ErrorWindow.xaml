<Window x:Class="Persona5Rus.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Persona5Rus"
        mc:Ignorable="d"
        Title="Ошибка" Height="300" Width="500">
    <Grid>
        <TextBox IsReadOnly="True"
                 Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:ErrorWindow}}, Path=ErrorText, Mode=OneWay}"/>
    </Grid>
</Window>